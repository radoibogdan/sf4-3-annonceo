{% extends '_template.html.twig' %}

{% block title %} Modification du mot de passe {% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Modification du mot de passe</h1>
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword.first, {
                label : 'Mot de passe'
            }) }}
            {{ form_row(resetForm.plainPassword.second, {
                label : 'Confirmer le mot de passe'
            }) }}
            <button type="submit" class="button is-primary is-fullwidth">Modifier</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}