{% extends "_admin_template.html.twig" %}

{% block title %}
    Supprimer l'annonce {{ annonce.titre }}
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Supprimer l'annonce"{{ annonce.titre }}"</h1>

        {{ form_start(deletionForm) }}

        {{ form_row(deletionForm.confirmation, {
            label: 'Je confirme la suppression de l\'annonce "' ~ annonce.titre ~ '"'
        }) }}

        <button type="submit" class="button is-danger is-fullwidth">
            Supprimer
        </button>

        {{ form_end(deletionForm)}}

    </div>
{% endblock %}