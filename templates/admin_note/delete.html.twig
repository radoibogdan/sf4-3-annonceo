{% extends "_admin_template.html.twig" %}

{% block title %}
    Suppression note de {{ note.auteur.nom }}
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Supprimer la note de "{{ note.auteur.nom }}"</h1>

        {{ form_start(deletionForm) }}

        {{ form_row(deletionForm.confirmation, {
            label: 'Je confirme la suppression de la note de  "' ~ note.auteur.nom ~ '"'
        }) }}

        <button type="submit" class="button is-danger is-fullwidth">
            Supprimer
        </button>

        {{ form_end(deletionForm)}}

    </div>
{% endblock %}